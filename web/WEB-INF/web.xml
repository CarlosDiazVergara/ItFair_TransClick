<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>cl.duoc.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>cl.duoc.controller.MenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorInicioSession</servlet-name>
        <servlet-class>cl.duoc.controller.ErrorInicioSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSessionServlet</servlet-name>
        <servlet-class>cl.duoc.controller.CerrarSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/MenuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorInicioSession</servlet-name>
        <url-pattern>/ErrorInicioSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSessionServlet</servlet-name>
        <url-pattern>/CerrarSessionServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoginInicio.jsp</welcome-file>
    </welcome-file-list>
</web-app>
